{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@entity/*": ["entities/*"],
      "@enum/*": ["enums/*"],
      "@interface/*": ["interfaces/*"],
    },
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
